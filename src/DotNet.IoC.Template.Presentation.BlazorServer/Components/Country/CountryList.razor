@inherits CountryListBase

@if (Countries == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th> 
                <th>Name</th>
                <th>IsoCode</th>
                <th>Observations</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in Countries)
            {
                <tr>
                    <td>@country.Id</td>
                    <td>@country.Name</td>
                    <td>@country.IsoCode</td>
                    <td>@country.Observations</td>
                    <td><button type="button" class="btn btn-primary" @onclick="() => EditCountry(country.Id)">Edit</button></td>
                    <td><button type="button" class="btn btn-danger" @onclick="() => DeleteCountry(country.Id)">Del</button></td>
                </tr>
            }
        </tbody>
    </table>
}
